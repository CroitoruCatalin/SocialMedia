@model IEnumerable<SocialMedia.Models.ViewModels.UserViewModel>

@{
    ViewData["Title"] = "Followers";
}

<div class="container">
    <h2>@ViewData["Title"]</h2>

    <ul class="list-group">
        @foreach (var follower in Model)
        {
            <li class="list-group-item">
                <div class="d-flex justify-content-between align-items-center">
                    <span>@follower.FullName</span>
                    <a asp-controller="Users" asp-action="Details" asp-route-id="@follower.Id" class="btn btn-primary">View Profile</a>
                </div>
            </li>
        }
    </ul>
</div>
